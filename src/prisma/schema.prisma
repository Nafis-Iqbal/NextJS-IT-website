// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Project {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    title        String
    description  String
    image        String?
    technologies String[]
    githubUrl    String?
    liveUrl      String?
    featured     Boolean  @default(false)
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    @@map("projects")
}

model Contact {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    email     String
    subject   String?
    message   String
    createdAt DateTime @default(now())

    @@map("contacts")
}

model User {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    email     String   @unique
    name      String?
    role      Role     @default(USER)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}

enum Role {
    USER
    ADMIN
}
